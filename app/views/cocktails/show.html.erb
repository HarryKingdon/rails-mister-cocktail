<div class="container">

<h1><%= @cocktail.name %></h1>

<h3>I N G R E D I E N T S</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> - <%= dose.ingredient.name %>. <%= link_to "remove this ingredient?", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %></</li>
  <% end %>
</ul>

<h3>add an ingredient</h3>
<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <div class="form-group">
    <%= f.input :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.association :ingredient, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-warning' %>
<% end %>

<%= link_to "remove this cocktail from your selection", method: :destroy, class: "btn btn-danger" %>

</div>
